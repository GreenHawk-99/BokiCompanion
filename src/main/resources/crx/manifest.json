{
  "manifest_version": 3,
  "name": "Boki Companion",
  "description": "Keep your Discord friends up to date with what music you're listening to on YouTube.",
  "version": "0.2.0",
  "permissions": [
    "tabs",
    "https://*.youtube.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/BokiCompanion-16.png",
      "19": "icons/BokiCompanion-19.png",
      "32": "icons/BokiCompanion-32.png",
      "48": "icons/BokiCompanion-48.png",
      "128": "icons/BokiCompanion-128.png"
    }
  },
  "icons": {
    "16": "icons/BokiCompanion-16.png",
    "19": "icons/BokiCompanion-19.png",
    "32": "icons/BokiCompanion-32.png",
    "48": "icons/BokiCompanion-48.png",
    "128": "icons/BokiCompanion-128.png"
  }
}
